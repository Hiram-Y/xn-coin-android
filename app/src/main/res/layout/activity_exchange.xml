<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_exchange_usd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/wallet_flag_usa"
                    android:layout_width="23dp"
                    android:layout_height="15dp" />

                <TextView
                    android:text="$1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="≈"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="¥"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_rate_usd"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@mipmap/wallet_flag_chn"
                    android:layout_marginLeft="15dp"
                    android:layout_width="23dp"
                    android:layout_height="15dp" />


            </LinearLayout>

            <View
                android:background="@color/gray_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:text="@string/wallet_exchange_explain"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_exchange_hkd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="44dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/wallet_flag_hk"
                    android:layout_width="23dp"
                    android:layout_height="15dp" />

                <TextView
                    android:text="$1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="≈"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="¥"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_rate_hkd"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@mipmap/wallet_flag_chn"
                    android:layout_marginLeft="15dp"
                    android:layout_width="23dp"
                    android:layout_height="15dp" />


            </LinearLayout>

            <View
                android:background="@color/gray_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:text="@string/wallet_exchange_explain"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>