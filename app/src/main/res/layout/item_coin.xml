<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/iv_watermark"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_name"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="match_parent"
                        android:layout_weight="430"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_marginLeft="15dp"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_frozen"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="@string/wallet_frozen_0"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_weight="345"
                        android:layout_height="0dp" />

                </LinearLayout>

            </FrameLayout>

            <View
                android:background="@color/gray_eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/ll_recharge"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@mipmap/wallet_recharge"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="@string/wallet_charge"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/gray_eeeeee"
                android:layout_width="1dp"
                android:layout_height="21dp"/>

            <LinearLayout
                android:id="@+id/ll_withdraw"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@mipmap/wallet_withdraw"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="@string/wallet_withdraw"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/gray_eeeeee"
                android:layout_width="1dp"
                android:layout_height="21dp"/>

            <LinearLayout
                android:id="@+id/ll_bill"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@mipmap/wallet_bill"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="@string/wallet_bill"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
