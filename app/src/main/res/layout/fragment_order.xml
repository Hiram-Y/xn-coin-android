<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <LinearLayout
                android:id="@+id/ll_coin"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_coin"
                    android:textSize="14sp"
                    android:text="ETH"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@mipmap/deal_select"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_btn1"
                        android:textSize="17sp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/order_jingxingzhong"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/v_btn1"
                        android:layout_alignRight="@+id/tv_btn1"
                        android:layout_alignLeft="@+id/tv_btn1"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/tv_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"/>

                    <ImageView
                        android:id="@+id/iv_msg_new_tip"
                        android:visibility="gone"
                        android:layout_marginTop="-4dp"
                        android:layout_marginLeft="-4dp"
                        android:layout_alignRight="@+id/tv_btn1"
                        android:layout_alignTop="@+id/tv_btn1"
                        android:background="@drawable/corner_im_msg_tip"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_btn2"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_btn2"
                        android:textSize="17sp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/order_yijieshu"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/v_btn2"
                        android:layout_alignRight="@+id/tv_btn2"
                        android:layout_alignLeft="@+id/tv_btn2"
                        android:background="@color/white"
                        android:layout_marginTop="4dp"
                        android:layout_below="@+id/tv_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"/>

                    <ImageView
                        android:id="@+id/iv_msg_done_tip"
                        android:visibility="gone"
                        android:layout_marginTop="-4dp"
                        android:layout_marginLeft="-4dp"
                        android:layout_alignRight="@+id/tv_btn2"
                        android:layout_alignTop="@+id/tv_btn2"
                        android:background="@drawable/corner_im_msg_tip"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search"
                android:visibility="gone"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/deal_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/gray_dedede"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <View
            android:background="@color/gray_dedede"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <com.cdkj.baselibrary.views.mViewpager
            android:id="@+id/pager_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </com.cdkj.baselibrary.views.mViewpager>



    </LinearLayout>
</layout>